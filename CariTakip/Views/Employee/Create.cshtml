@model Entities.Entities.Employee

<h2>Çalışan Ekle</h2>
<hr>
<form asp-controller="Employee" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Çalışan Adı</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Department" class="form-label">Departman</label>
        <input asp-for="Department" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Position" class="form-label">Pozisyon</label>
        <input asp-for="Position" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">E-posta</label>
        <input asp-for="Email" class="form-control">
    </div>

    <button type="submit" class="btn btn-secondary">Kaydet</button>

</form>