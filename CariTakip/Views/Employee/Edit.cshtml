@model Entities.Entities.Employee

<h2>Çalışan Güncelleme</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="Employee" asp-action="Edit" method="post">
            <input type="hidden" asp-for="EmployeeId">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Öğrenci Adı</label>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Department" class="form-label">Departman</label>
                <input asp-for="Department" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Position" class="form-label">Pozisyon</label>
                <input asp-for="Position" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control">
            </div>

            <button type="submit" class="btn btn-secondary">Kaydet</button>

        </form>
    
