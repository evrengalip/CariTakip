@using Entities.Enum
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/css/all.min.css">

     



    <!-- AdminLTE CSS -->
    
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/Home/Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/Home/Privacy" class="nav-link">Gizlilik</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="~/User/Logout" class="nav-link">
                            <i class="fas fa-sign-out-alt mr-2"></i> Çıkış
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="~/User/Login"><i class="fas fa-sign-in-alt"></i> Giriş</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/User/Register"><i class="fas fa-user-plus"></i> Kayıt</a>
                    </li>
                }
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="~/Home/Index" class="brand-link">
                <img src="~/adminlte/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">CariTakip</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex align-items-center">
                        <a href="~/User/Profile" class="d-flex align-items-center text-decoration-none">
                            <div class="image" style="margin-right: 10px;">
                                <i class="fas fa-user-circle fa-2x text-white"></i>
                            </div>
                            <div class="info">
                                <span class="text-white">@User.FindFirst("Username").Value</span>
                            </div>
                        </a>
                    </div>
                }

                <!-- Sidebar Menu -->
                @if (User.Identity.IsAuthenticated)
                {
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a href="~/Employee/Index" class="nav-link">
                                    <i class="nav-icon fas fa-user"></i>
                                    <p>Çalışan Ekle</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/Item/Index" class="nav-link">
                                    <i class="nav-icon fas fa-box"></i>
                                    <p>Eşya Ekle</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/EmployeeItem/Index" class="nav-link">
                                    <i class="nav-icon fas fa-exchange-alt"></i>
                                    <p>Çalışan Eşya Atama</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/EmployeeDebt/Index" class="nav-link">
                                    <i class="nav-icon fas fa-list"></i>
                                    <p>Çalışan Borç Listesi</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="~/PaymentHistory/Index" class="nav-link">
                                    <i class="nav-icon fas fa-history"></i>
                                    <p>Ödeme Kayıtları</p>
                                </a>
                            </li>
                           
                            @if (User.IsInRole(Roles.Admin.ToString()))
                            {
                                <li class="nav-item">
                                    <a href="~/Admin/Index" class="nav-link">
                                        <i class="nav-icon fas fa-cogs"></i>
                                        <p>Admin Paneli</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="~/ChangeLog/Index" class="nav-link">
                                        <i class="nav-icon fas fa-file-alt"></i>
                                        <p>Log Kayıtları</p>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid pt-4">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0
            </div>
            <strong>&copy; 2024 CariTakip</strong> All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- Scripts -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
