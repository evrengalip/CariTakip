@model IEnumerable<Entities.Entities.User>

@{
    ViewData["Title"] = "Users";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
        }

        .container {
            margin-top: 20px;
            background-color: #ffffff; /* White background for the container */
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #343a40; /* Dark gray for headings */
            margin-bottom: 20px;
        }

        .btn-success {
            background-color: #28a745; /* Green button color */
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .table thead th {
            background-color: #e9ecef; /* Light gray background for table headers */
            color: #495057; /* Darker gray for text */
        }

        .table td, .table th {
            vertical-align: middle;
            text-align: center;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f3f5; /* Very light gray background on row hover */
        }

        .btn-primary {
            background-color: #6c757d; /* Gray button color */
            border-color: #6c757d;
        }

            .btn-primary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .btn-danger {
            background-color: #dc3545; /* Red button color */
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <div class="mb-3 text-end">
            <a href="@Url.Action("Export")" class="btn btn-success">
                <i class="fas fa-file-excel me-2"></i> Excel'e Aktar
            </a>
        </div>

        <table id="userTable" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Locked</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@(user.Locked ? "Yes" : "No")</td>
                        <td>
                            <a href="@Url.Action("EditUser", new { id = user.Id })" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <!-- Delete form -->
                            <form method="post" action="@Url.Action("DeleteUser", new { id = user.Id })" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JavaScript -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <!-- Bootstrap JavaScript -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "pageLength": 10,
                "order": [[0, "asc"]],
                "language": {
                    "lengthMenu": "Göster _MENU_ giriş",
                    "zeroRecords": "Kayıt bulunamadı",
                    "info": "Sayfa _PAGE_ / _PAGES_",
                    "infoEmpty": "Kayıt bulunmuyor",
                    "infoFiltered": "(toplam _MAX_ kayıttan filtrelendi)",
                    "search": "Ara:",
                    "paginate": {
                        "next": "Sonraki",
                        "previous": "Önceki"
                    }
                },
                "dom": 'Bfrtip',
                "buttons": [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> Excel\'e Aktar',
                        className: 'btn btn-success'
                    }
                ]
            });
        });
    </script>
</body>
</html>
